<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linerpaper1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:padding="10dp"
        android:src="@drawable/splash"
        android:background="#fff" />

    <TextView
        android:id="@+id/ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="#000"
        tools:text="نسخه برنامه"
        android:background="#fff" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#404040" />

            <LinearLayout
                android:id="@+id/feedbackLine"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#eee"
                android:orientation="horizontal"
                android:tag="#cccccc" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.15"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/mail" />

                    <TextView
                        android:id="@+id/feedback_tex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:paddingRight="20dp"
                        android:gravity="right"
                        android:text="تماس با ما"
                        android:textColor="#000"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#404040" />

            <LinearLayout
                android:id="@+id/moarefiLine"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#eee"
                android:orientation="horizontal"
                android:tag="#cccccc" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >
                    
                                        
                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.15"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/contact" />

                    <TextView
                        android:id="@+id/moarefi_tex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:paddingRight="20dp"
                        android:gravity="right"
                        android:text="مـعرفــی به دوستــان"
                        android:textColor="#000"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#404040" />
            

        </LinearLayout>
    </ScrollView>
</LinearLayout>